{
	"name": "@vafast/html",
	"version": "0.0.1",
	"description": "HTML rendering plugin for Vafast framework",
	"author": {
		"name": "Vafast Team",
		"url": "https://github.com/vafastjs",
		"email": "team@vafast.dev"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/cjs/index.js"
		}
	},
	"keywords": [
		"vafast",
		"html",
		"jsx",
		"rendering"
	],
	"homepage": "https://github.com/vafastjs/vafast-html",
	"repository": {
		"type": "git",
		"url": "https://github.com/vafastjs/vafast-html"
	},
	"bugs": "https://github.com/vafastjs/vafast-html/issues",
	"license": "MIT",
	"scripts": {
		"dev": "bun run --watch example/start-server.ts",
		"test": "bun test",
		"build": "bun build.ts",
		"release": "npm run build && npm run test && npm publish --access public"
	},
	"peerDependencies": {
		"vafast": ">= 0.1.12"
	},
	"devDependencies": {
		"@types/bun": "1.2.23",
		"eslint": "9.6.0",
		"vafast": "^0.1.13",
		"tsup": "^8.1.0",
		"typescript": "^5.5.3"
	},
	"dependencies": {
		"@kitajs/html": "^4.1.0",
		"@kitajs/ts-html-plugin": "^4.0.1"
	}
}
