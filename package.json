{
	"name": "@vafast/html",
	"version": "0.0.1",
	"description": "HTML rendering plugin for Vafast framework",
	"type": "module",
	"author": {
		"name": "Vafast Team",
		"url": "https://github.com/vafastjs",
		"email": "team@vafast.dev"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"keywords": [
		"vafast",
		"html",
		"jsx",
		"rendering"
	],
	"homepage": "https://github.com/vafastjs/vafast-html",
	"repository": {
		"type": "git",
		"url": "https://github.com/vafastjs/vafast-html"
	},
	"bugs": "https://github.com/vafastjs/vafast-html/issues",
	"license": "MIT",
	"scripts": {
		"clean": "rimraf dist",
		"build": "tsup",
		"dev": "bun run --watch example/start-server.ts",
		"test": "bun test",
		"test:types": "tsc --noEmit",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"type-check": "tsc --noEmit",
		"prepublishOnly": "npm run build && npm run test",
		"release": "npm run build && npm run test && npm publish --access=public",
		"release:patch": "npm version patch && npm run release && git push && git push --tags",
		"release:minor": "npm version minor && npm run release && git push && git push --tags",
		"release:major": "npm version major && npm run release && git push && git push --tags"
	},
	"peerDependencies": {
		"vafast": ">= 0.1.12"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"devDependencies": {
		"@types/bun": "^1.1.2",
		"@typescript-eslint/eslint-plugin": "^7.9.0",
		"@typescript-eslint/parser": "^7.9.0",
		"eslint": "^9.2.0",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.1",
		"typescript": "^5.4.5",
		"vafast": "^0.3.4"
	},
	"dependencies": {
		"@kitajs/html": "^4.1.0",
		"@kitajs/ts-html-plugin": "^4.0.1"
	}
}
